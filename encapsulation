// class and object


 class user{
     var name:String=""
     private set
     
     fun setName(newName:String)
     {
         if(newName.isNotEmpty())
         {
             name=newName;
         }
         else
         {
             print("name cant be empty")
         }
     }
 }

fun main(){
    val u=user()
    u.setName("pooja")
    print(u.name)
       
}




